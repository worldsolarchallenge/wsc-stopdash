<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>

    <script type = "text/JavaScript">
     <!--
            function AutoRefresh( t ) {
               setTimeout("location.reload(true);", t);
            }
         //-->
    </script>
  </head>

  <body onload="JavaScript:AutoRefresh(5000);">
    <div class="container text-center">
      <div class="row">
        <div class="col">
          <h1>BWSC Control Stop {{controlstop["number"]}}</h1>
          <h2>{{controlstop["name"]}} at {{"%.1f"|format(controlstop["km"])}} km</h2>
          <h3>{{pd.Timestamp.now("Australia/Darwin").strftime("%H:%M:%S")}}</h3>
        </div>
        <div class="col">
          <img src="https://worldsolarchallenge.org/BWSC-LogoBlack.svg" align="right" width="75%" style="padding: 10px;">
        </div>
      </div>

      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th>Team#</th>
              <th class="text-start">Team</th>
              <th>Control Stop</th>
              <th>Time in</th>
              <th>Speed</th>
              <th>Distance</th>
              <th>ETA</th>
            </tr>
          </thead>

          <tbody>
      {% for _,vals in entries.iterrows() %}
        {% if not vals["competing"] %}
            <tr class="table-secondary">
              <td>{{'%02d' % vals["teamnum"]|int}}</td>
              <td class="text-start">{{vals["shortname"]}}</td>
                <td>{{vals["control_stop.name"]}}</td>
              <td>{{vals["time"]}}</td>
              <td>Not Competing</td>
              <td></td>
            </tr>

        {% elif vals["control_stop.number"] == controlstop["number"] %}
            <tr>
                <td>{{'%02d' % vals["teamnum"]|int}}</td>
                <td class="text-start">{{vals["shortname"]}}</td>
                <td>{{vals["control_stop.name"]}}</td>
                <td>{{vals["time"]}}</td>
                <td></td>
                <td></td>
            </tr>

        {% elif vals["control_stop.number"] == controlstop["number"] - 1%}
            <tr class="table-warning">
                <td>{{vals["teamnum"]}}</td>
                <td>{{vals["shortname"]}}</td>
                <td>{{vals["control_stop.name"]}}</td>
                <td></td>
                <td>{% if "speed" in vals and vals["speed"] == vals["speed"] %}{{"%d"|format(vals["speed"])}} km/h{% else %}N/A{% endif %}</td>
                <td>{% if "distance" in vals and vals["distance"] == vals["distance"] %}{{"%d"|format(controlstop["km"] - vals["distance"])}} km{% else %}N/A{% endif %}</td>
                <td>{{vals["eta"]}}</td>
            </tr>
        {% endif %}
      {% endfor %}
          </tbody>
        </table>


  </body>
</html>
